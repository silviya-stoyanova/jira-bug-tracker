{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
